<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_sales_merchandise_in_transit" model="ir.ui.view">
        <field name="name">Merchandise in Transit Report Wizard</field>
        <field name="model">wizard.merchandise.transit</field>
        <field name="arch" type="xml">
            <form string="Merchandise in Transit Report">
                <field invisible="1" name="state"/>
                <div states="choose">
                    <group >
                        <group>
                            <field name="date_from" required="1"/>
                        </group>
                        <group >
                            <field name="date_to" required="1"/>
                        </group>
                    </group>
                </div>
                <div states="get">
                    <group>
                        <field name="name" colspan="4" invisible="1"/>
                        <field name="report" filename="name" colspan="4"/>
                    </group>
                </div>
                <footer states="choose">
                    <button name="print_pdf" string="Export PDF" type="object" class="oe_highlight" />
                    <button name="show_merchandise" string="Mostrar MercancÃ­a" type="object" class="oe_highlight" />
                    <button special="cancel" string="Cancel" class="oe_highlight" />
                </footer>
                <footer states="get">
                    <button special="cancel" string="Cancel" class="oe_highlight" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_sales_merchandise_in_transit" model="ir.actions.act_window">
        <field name="name">Merchandise in Transit Report</field>
        <field name="res_model">wizard.merchandise.transit</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_sales_merchandise_in_transit"/>
        <field name="target">new</field>
    </record>

    <menuitem name="Merchandise in Transit Report" parent="sale.menu_sale_report" id="sales_merchandise_in_transit.wizard_sales_merchandise_transit" sequence="15" action="action_sales_merchandise_in_transit"/>
</odoo>