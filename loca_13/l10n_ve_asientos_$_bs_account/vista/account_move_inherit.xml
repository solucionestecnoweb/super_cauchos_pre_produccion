<odoo>
  <data>

     <record id="account_move_inerhit_conv" model="ir.ui.view">
        <field name="name">account.move.inerhit.conv</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
           <xpath expr="//field[@name='amount_total_signed']" position="after">  
                      
                <!--field name="sublineas" string="Sub Lineas"/>
                <field name="modelo_id" string="Modelo del Producto" />
                <field name="tipo_id" string="Tipo / CategorÃ­a" />
                <field name="color" string="Color"/>
                <field name="formato" string="Formato"/>
                <field name="uso" string="Uso"/>
                <field name="material" string="Material"/-->
                <field name="amount_total_signed_aux_bs" string="Total Bs" sum="amount_total_signed_aux_bs"/>
                <!--field name="calidad" string="Calidad"/>
                <field name="uni_neg_id" string="Unidad de Negocios" /-->
              
            </xpath>
        </field>
    </record>  

    <record id="account_move_line_inerhit_conv" model="ir.ui.view">
        <field name="name">account.move.line.inerhit.conv</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
           <xpath expr="//form[1]/sheet[1]/notebook[1]/page[2]/field[@name='line_ids']/tree[1]/field[@name='credit']" position="after">  
                <field name="debit_aux" string="Debito Bs" sum="debit_aux"/>
                <field name="credit_aux" string="Credito Bs" sum="credit_aux"/>
              
            </xpath>
        </field>
    </record>  

